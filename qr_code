import tkinter
from tkinter import *
from tkinter import Label, Button
from tkinter.font import Font
from PIL import ImageTk
import qrcode 
from qrcode.image.styledpil import StyledPilImage

def window():
    global ask_url_label
    ask_url_label = Label(top, text='Ëš ğŸ“ â‹… â˜† ~enter your url below~  à­§ ğŸ°â€§â‚Š',font = Font(size = 20), pady = 15, padx = 10, bg = 'pink')
    ask_url_label.pack()
    global entered_url
    entered_url = Entry(top, textvariable=StringVar, xscrollcommand=True, bg = 'mintcream', font = Font(size = 20))
    entered_url.pack()
    global generate_button
    generate_button = Button(top, text = 'âœ¿ make my url âœ¿', font = Font(size = 20), command= yay, pady= 15, padx = 10)
    generate_button.pack()

def yay1():
    new_txt.destroy()
    canvas.destroy()
    new_butt.destroy()
    window()
        
def yay():
    entry = entered_url.get()
    entered_url.destroy()
    generate_button.destroy()
    ask_url_label.destroy()
    global new_txt
    new_txt = Label(top, text='*:ğŸŒ·here\'s your qr codeğŸ§º*:ï½¥ \nâ•±|ã€\n(ËšË ã€‚7\n |ã€Ëœã€µ\n __ã˜ã—Ë,)ãƒ_', bg='pink', font = Font(size = 20), pady= 20, padx = 10)
    new_txt.pack()
    qr = qrcode.QRCode(
        version = 1,
        error_correction=qrcode.constants.ERROR_CORRECT_L,
        box_size = 10,
        border = 4
        )
    qr.add_data(entry)
    qr.make(fit=True)
    img = qr.make_image(fill_color='red', back_color='white', image_factory=StyledPilImage)
    global tk_image
    tk_image = ImageTk.PhotoImage(img)
    global canvas
    canvas = Canvas(top, width=300, height= 300, bg='mintcream')
    canvas.create_image(8,8,anchor=NW, image=tk_image)
    canvas.pack()
    global new_butt
    new_butt = Button(top, text='â™¡ make a new qr code â™¡', bg= 'mintcream', command = yay1, font = Font(size = 20), padx=10, pady= 15) 
    new_butt.pack()

global top
top = tkinter.Tk()
top['bg'] = 'pink'
top.title('QR Code Generator')
top.geometry("600x500")
window()
top.mainloop()